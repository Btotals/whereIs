template(name="register")
	.container
		.row
			.col-md-4.col-md-offset-2
				img(src="images/logo.png")
			.col-md-4
				h1.text-center.login-title 注册
				.signup-wall
					form.form-signin#register-module(action='/signup', method='POST')
						input(type='text', name='email', id = 'email', class='form-control', placeholder='Email',required, autofocus)
						input(type='password', name='password', id = 'password', class='form-control', placeholder='Password', required)
						input(type='text', name='nickname', id = 'nickname', class='form-control', placeholder='Nickname', required)
						.row
							.col-md-6
								button(class='btn btn-lg btn-primary btn-block Register') Register
							.col-md-6
								a(href="/login")
									button(class='btn btn-lg btn-warning btn-block SignIn') Return to Sign in
						span.clearfix

