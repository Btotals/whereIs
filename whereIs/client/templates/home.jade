template(name="home")
	.row
		span.h6 <br>
	.container
		.row#big
			.col-md-8
				.row
					.col-md-12
						.ui.segment(style="min-height: 8rem;")
							.ui.teal.ribbon.label 最新问题
							each nQuestions
								{{> newItem}}
				.ui.divider
				.row
					.col-md-12
						.ui.segment(style="min-height: 8rem;")
							.ui.red.ribbon.label 最热问题
							each tQuestions
								{{> hotItem}}
			.col-md-3#rank
				+ranklist


template(name="newItem")
	.ui.divided.items
		.link.item
			.ui.tiny.image.resetwidth
				img(src="/images/u10.png")
			.content
				a(href='/questiondetail/#{_id}').header #{title}
				.description
					span.h6 
						a(href='/profile/#{askerID}') #{askerNickname}
						|发布于 #{addTime}, 悬赏分数: #{reward}
				span.pull-right #{totalAnswer}人回答

template(name="hotItem")
	.ui.divided.items
		.link.item
			.ui.tiny.image.resetwidth
				img(src="/images/u10.png")
			.content
				a(href='/questiondetail/#{_id}').header #{title}
				.description
					span.h6 
						a(href='/profile/#{askerID}') #{askerNickname}
						|发布于 #{addTime}, 悬赏分数: #{reward}
				span.pull-right #{totalAnswer}人回答

template(name="ranklist")
	ul#myTab.nav.nav-tabs
		li.active
			a(href='#home', data-toggle='tab') 周百事通
		li
			a(href='#ios', data-toggle='tab') 月百事通
	#myTabContent.tab-content
		#home.tab-pane.fade.in.active
			.row
				each Users
					{{> userItem}}
		#ios.tab-pane.fade
			.row
				each Users
					{{> userItem}}

template(name="userItem")
	.row
		span.h6 <br>
	.shift-down-1vh
		.row
			.col-md-1.col-md-offset-1.h4.text-center +
			.col-md-3
				img.img-circle(src="/images/u66.png"
								 height="40"
								 width="40")
			.col-md-4
				span.h5 
					a(href='/profile/#{_id}') #{profile.nickname}
				br
				span.h6 积分: #{profile.score}
	.row
		span.h6 <br>
